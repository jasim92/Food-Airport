<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gbp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_intro"
    android:orientation="vertical"
    tools:context=".TerminalActivity">

    <LinearLayout
        android:id="@+id/main_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="What terminal are you on?"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@id/terminal1">

                <RadioButton
                    android:id="@+id/terminal1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:buttonTint="@color/black"
                    android:text="1" />

                <RadioButton
                    android:id="@+id/terminal2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:buttonTint="@color/black"
                    android:text="2" />

                <RadioButton
                    android:id="@+id/terminal3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:buttonTint="@color/black"
                    android:text="3" />
            </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Started"
                android:layout_gravity="center"
                android:fontFamily="cursive"
                android:textColor="@color/black"
                android:layout_marginRight="8dp"
                android:textSize="28sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/round_layout">
                <ImageView
                    android:id="@+id/get_start"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/forward" />
            </LinearLayout>

        </LinearLayout>
        <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/progress_bar3"
            android:layout_gravity="center"
            gbp:type="nexus_rotation_cross"/>
    </LinearLayout>
</LinearLayout>